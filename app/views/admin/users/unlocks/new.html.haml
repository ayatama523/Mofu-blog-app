- p resource_name
.text-left
  %h1.text-gray-900.mb-4.auth-title= t('devise.unlocks.new.resend_unlock_instructions')
= form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: 'form' do |f|
  = render 'admin/users/shared/error_messages', resource: resource
  .form-group.mb-3
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control auth-text-input'
  .form-group.mb-3
    = f.submit t('devise.unlocks.new.resend_unlock_instructions'), class: 'btn btn-primary auth-submit-btn'
  = render 'admin/users/shared/links'
