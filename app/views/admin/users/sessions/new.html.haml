= form_for resource, as: resource_name, url: session_path(resource_name), class: 'form' do |f|
  = render 'admin/users/shared/error_messages', resource: resource
  .form-group.mb-4.mt-4
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control auth-text-input w-100'
  .form-group.mb-4.mt-4
    = f.label :password
    = f.password_field :password, autocomplete: 'current-password', class: 'form-control auth-text-input w-100'
  .form-group.mb-4.mt-4
    = f.submit 'ログイン', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
  = render 'admin/users/shared/links'
