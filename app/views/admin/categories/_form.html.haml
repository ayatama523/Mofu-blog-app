.form-group.row
  = f.label :name
  .col-md-10
  = f.text_field :name
.form-group.row
  = f.label :parent
  .col-md-10
  = f.select :category_id, category_options(options), { include_blank: true }, class: 'form-select', required: true
.form-group.row
  .offset-md-2.col-md-10
    - if f.object.new_record?
      = f.submit '保存', class: 'btn btn-primary'
      = link_to 'キャンセル', admin_categories_path, class: 'btn btn-secondary'
    - else
      = f.submit '更新', class: 'btn btn-primary'
      = link_to 'キャンセル', admin_categories_path, class: 'btn btn-secondary'